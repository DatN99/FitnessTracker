<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="?colorPrimary"
    app:cardElevation="10dp"
    >

    <FrameLayout
        android:outlineAmbientShadowColor="@color/teal_200"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="107dp"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginVertical="10dp"
            android:text="Exercise Name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/weightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="300dp"
            android:layout_marginTop="0dp"
            android:layout_marginVertical="10dp"
            android:text="Weight"
            android:textColor="@android:color/black"
            android:textSize="20sp"
             />

        <TextView
            android:id="@+id/setsrepsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="0dp"
            android:layout_marginVertical="10dp"
            android:text="Reps"
            android:textColor="@android:color/black"
            android:textSize="20sp"
             />

        <Button
            android:id="@+id/editSetButton"
            style="@style/editButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/setsrepsTextView"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/workoutcardedit" />

        <Button
            android:id="@+id/addCopyButton"
            style="@style/copyButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/setsrepsTextView"
            android:layout_marginTop="20dp"
            android:layout_marginRight="18dp"
            android:layout_toLeftOf="@id/editSetButton"
            android:background="@drawable/workoutcardcopy"
            android:text="+" />


    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>