<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitnessTracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ff3d00</item>
        <item name="colorPrimaryVariant">#c30000</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ff3d00</item>
        <item name="colorSecondaryVariant">#ff7539</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

    </style>

    <style name="Theme.FitnessTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.FitnessTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.FitnessTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="entertimerButton" parent="Widget.MaterialComponents.Button">
        <item name = "materialThemeOverlay">@style/customEnterTimer</item>
    </style>

    <style name="customEnterTimer">
        <item name="colorPrimary">#000000</item>
    </style>


    <style name="copyButton" parent="Widget.MaterialComponents.Button">
        <item name ="materialThemeOverlay">@style/customcopybutton</item>
    </style>

    <style name="customcopybutton">
        <item name="colorPrimary">#000000</item>
    </style>


    <style name="editButton" parent = "Widget.MaterialComponents.Button">
        <item name = "materialThemeOverlay">@style/customeditbutton</item>
    </style>

    <style name= "customeditbutton">
        <item name = "colorPrimary">#000000</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/timercircle</item>
    </style>

</resources>